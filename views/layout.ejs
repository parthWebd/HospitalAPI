<head>
    <title>
        <%=title%>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    
    <%- style %>
</head>
<body>
    <header>
        <h1>Hello Doctor</h1>
    </header>
    <main>
        <%- body %>
    </main>

    <script>
        <%if(flash.success && flash.success.length>0){%>
            new Noty({
                    theme: 'relax',
                    text: "<%= flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 500
                    
                }).show();    
            <%} %>
            <% if (flash.error && flash.error.length > 0) {%>
                new Noty({
                    theme: 'relax',
                    text: "<%= flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 500
                    
                }).show();    
            <%} %>

    </script>


</body>